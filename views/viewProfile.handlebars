{{#if profile.user_id}}
<div class="row" id="viewProfileCard">
  <div class="card mx-auto col-sm-10 col-md-8 col-lg-6 my-auto text-center">
    <div class="info-block">
      <h3 id="view-dog-avatar"><img src="{{profile.avatar}}" height="110px" width="110px"></h3>
    </div>
    <div class="info-block">
      <h3 id="view-dog-name">{{profile.dog_name}}</h3>
    </div>
    <div class="info-block">
      <span id="view-dog-breed">Breed: {{profile.breed}}</span>
    </div>
    <div class="info-block">
      <span id="view-dog-gender">Gender: {{profile.gender}}</span>
    </div>
    <div class="info-block">
      <span id="view-dog-size">Size: {{profile.size}}</span>
    </div>
    <div class="info-block">
      <span id="view-dog-neighborhood">Neighborhood: {{profile.neighborhood}}</span>
    </div>
    <div class="info-block">
      <span id="view-dog-hobbies">Hobbies: {{profile.hobbies}}</span>
    </div>
  </div>
</div>

{{else}}

<div class="row">
  <div class="card mx-auto col-sm-10 col-md-8 col-lg-6 my-5 text-center">
    <span> Profile not found</span>
  </div>
</div>

{{/if}}