                <input class="form-input rounded" type="text" id="email-signup" placeholder="ohmydog@gmail.com" />
            </div>
            <div class="form-group row col-10 py-2">
                <label>Password:</label>
                <input class="form-input rounded" type="password" id="password-signup" placeholder="secret puppy password" />
            </div>
